{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@pokt-foundation/pocketjs": ["packages/pocket"],
      "@pokt-foundation/pocketjs-signer": ["packages/signer"],
      "@pokt-foundation/pocketjs-provider": ["packages/provider"],
      "@pokt-foundation/pocketjs-types": ["packages/types"],
      "@pokt-foundation/pocketjs-utils": ["packages/utils"]
    }
  }
}
